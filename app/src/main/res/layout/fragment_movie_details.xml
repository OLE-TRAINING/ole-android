<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_film"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="261dp"
                    android:orientation="vertical"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="vertical"
                        android:background="@color/colorTransparent"
                        android:paddingStart="@dimen/poster_thumb_width"
                        android:paddingEnd="@dimen/activity_margin"
                        android:paddingBottom="@dimen/activity_margin">

                        <CheckBox
                            android:id="@+id/checkbox_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/bigMargin"
                            android:button="@drawable/check_favorite"
                            android:checked="false" />

                        <TextView
                            android:id="@+id/text_title"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/activity_margin_content"
                            android:layout_marginTop="@dimen/activity_margin_quarter"
                            android:maxLines="1"
                            android:text="Movie Title"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/textView_keywords"
                            style="@style/TextAppearance.AppCompat.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_margin_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:alpha="0.38"
                            android:gravity="start"
                            android:maxLines="3"
                            android:text="Drama, Documentário"
                            android:textColor="@color/colorBlack" />

                        <LinearLayout
                            android:id="@+id/linearLayout_runtimeAndYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_margin_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="•"
                                android:textColor="@color/yellow"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView_runtime"
                                style="@style/TextAppearance.AppCompat.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/robotoregular"
                                android:maxLines="1"
                                android:text="2h 15min"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/textView_year"
                                style="@style/TextAppearance.AppCompat.Caption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:alpha="0.38"
                                android:fontFamily="@font/robotobold"
                                android:maxLines="1"
                                android:text="2017"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/activity_margin_content"
                            android:layout_marginTop="8dp"
                            android:alpha="0.4"
                            android:background="@android:color/black" />

                        <TextView
                            android:id="@+id/movie_description"
                            style="@style/TextAppearance.AppCompat.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginStart="@dimen/activity_margin_content"
                            android:layout_marginLeft="@dimen/activity_margin_content"
                            android:layout_marginTop="@dimen/activity_margin_half"
                            android:ellipsize="end"
                            android:fontFamily="@font/robotoregular"
                            android:maxLines="5"
                            android:text="Nowadays, user engagement is considered one of the most important metrics for the success of your app. owadays, user engagement is considered one of the most important metrics for the success of your app"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/textView_price"
                            style="@style/TextAppearance.AppCompat.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_margin_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/robotobold"
                            android:gravity="end|bottom"
                            android:maxLines="1"
                            android:text="R$ 16,90"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/poster_thumb_width"
                        android:layout_height="@dimen/poster_thumb_height"
                        android:layout_marginRight="@dimen/activity_margin_half"
                        app:cardBackgroundColor="@color/placeholder_grey"
                        app:cardCornerRadius="3dp"
                        app:cardPreventCornerOverlap="false">

                        <ProgressBar
                            android:id="@+id/movie_progress"
                            style="@style/Widget.AppCompat.ProgressBar"
                            android:layout_width="@dimen/activity_margin"
                            android:layout_height="@dimen/activity_margin"
                            android:layout_gravity="center"
                            android:elevation="-15dp"
                            android:theme="@style/CircularProgress" />

                        <ImageView
                            android:id="@+id/movie_poster"
                            android:layout_width="@dimen/poster_thumb_width"
                            android:layout_height="@dimen/poster_thumb_height"
                            android:elevation="-10dp"
                            android:scaleType="fitXY" />

                    </android.support.v7.widget.CardView>

                </FrameLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.v7.widget.RecyclerView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</android.support.design.widget.CoordinatorLayout>