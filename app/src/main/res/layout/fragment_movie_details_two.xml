<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:fitsSystemWindows="false"
        style="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:fitsSystemWindows="false"

            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/textview_toobar_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/encodesanssemisondensed_regular"
                android:textSize="20sp"
                android:text="OTMOVIES"
                android:layout_marginEnd="50sp"
                android:layout_marginStart="20sp"
                android:textColor="@color/colorTextWhite"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    style="@style/AppTheme.AppBarOverlay"
    android:fitsSystemWindows="false"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView_banner_details"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="-25dp"
                android:src="@drawable/banner_film" />

            <FrameLayout
                android:id="@+id/frame_layout_movie_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_collapseMode="pin">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:background="@color/colorTransparent"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/poster_thumb_width"
                        android:paddingBottom="@dimen/activity_margin">

                        <TextView
                            android:id="@+id/text_title_details"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/marginStartDetails"
                            android:layout_marginTop="12dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Movie Title"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/textView_keywords_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartDetails"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="@dimen/margin_top_details"
                            android:alpha="0.38"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Drama, Documentário"
                            android:textColor="@color/colorBlack" />

                        <LinearLayout
                            android:id="@+id/linearLayout_yearAndCountries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartDetails"
                            android:layout_marginTop="@dimen/margin_top_details"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView_year_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/textView_countries_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="USA, UK"
                                android:textColor="@color/colorBlack" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_diretorPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartDetails"
                            android:layout_marginTop="@dimen/margin_top_details"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/imdb_icon">

                                <TextView
                                    android:id="@+id/textView_imdb"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="IMDB"
                                    android:textColor="@color/colorTextWhite" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/textView_points_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7.9"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.38"
                                android:fontFamily="@font/robotoregular"
                                android:maxLines="2"
                                android:text="/10"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/textView_runtime_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:alpha="0.38"
                                android:fontFamily="@font/robotoregular"
                                android:maxLines="1"
                                android:text="2h 15min"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_diretorDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartDetails"
                            android:layout_marginTop="@dimen/margin_top_details"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.38"
                                android:fontFamily="@font/robotoregular"
                                android:maxLines="1"
                                android:text="Diretor: "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/textView_diretor_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="James Cameron"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_writerDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartDetails"
                            android:layout_marginTop="@dimen/margin_top_details"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.38"
                                android:fontFamily="@font/robotoregular"
                                android:maxLines="1"
                                android:text="Escritor: "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/textView_writer_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="James Cameron"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkbox_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/marginStartDetails"
                            android:layout_marginTop="@dimen/margin_top_details"
                            android:button="@drawable/check_favorite"
                            android:checked="false" />

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_fotoDetails"
                        android:layout_width="@dimen/poster_thumb_width"
                        android:layout_height="@dimen/poster_thumb_height"
                        android:layout_marginRight="@dimen/activity_margin_half"
                        android:paddingTop="-10dp"
                        app:cardBackgroundColor="@color/placeholder_grey"
                        app:cardCornerRadius="3dp"
                        app:cardPreventCornerOverlap="false">

                        <ProgressBar
                            android:id="@+id/movie_progress"
                            style="@style/Widget.AppCompat.ProgressBar"
                            android:layout_width="@dimen/activity_margin"
                            android:layout_height="@dimen/activity_margin"
                            android:layout_gravity="center"
                            android:elevation="-15dp"
                            android:theme="@style/CircularProgress" />

                        <ImageView
                            android:id="@+id/imageView_poster_details"
                            android:layout_width="@dimen/poster_thumb_width"
                            android:layout_height="@dimen/poster_thumb_height"
                            android:elevation="-10dp"
                            android:scaleType="fitXY" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/textView_overview_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardView_fotoDetails"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/robotoregular"
                        android:gravity="clip_horizontal"
                        android:maxLines="8"
                        android:text="Nowadays, user engagement is considered one of the most important metrics for the success of your app. owadays, user engagement is considered one of the most important metrics for the success of your app"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_layout_movie_details"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:alpha="0.38"
                        android:text="Opções Semelhantes:"
                        android:textColor="@color/colorBlack" />

                    <ProgressBar
                        android:id="@+id/progress_bar_recycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="50dp"
                        android:visibility="invisible" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_films_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="16dp" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>